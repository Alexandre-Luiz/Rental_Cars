<% if rental_subsidiary.errors.any? %>
  <ul>
    <% rental_subsidiary.errors.full_messages.each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: rental_subsidiary, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :cnpj %>
    <%= form.text_field :cnpj %>
  </div>
  <div>
    <%= form.label :adress %>
    <%= form.text_field :adress %>
  </div>

  <%= form.submit 'Enviar'%>
<% end %>